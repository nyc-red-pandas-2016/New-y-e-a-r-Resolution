<div class="container">

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <h1>Edit Answer</h1>
  <form action="/answers/<%=@answer.id%>/edit" method="post" class="register_form">
    <input type="hidden" name="_method" value="put">
    <label for="answer[text]">Text:</label>
    <input type="text" name="answer[text]" value="<%=@answer.text%>"><br>
    <input type="hidden" name="answer[user_id]" value="<%= current_user %>">
    <input type="submit" value="Edit Answer" class="submit_button">
  </form>

  <h1>Delete Answer</h2>
    <form action="<%= "/answers/#{@answer.id}" %>" method="post">
    <input type="submit" value="Delete Answer">
    <input type="hidden" name="_method" value="delete">
  </form>

</div>
