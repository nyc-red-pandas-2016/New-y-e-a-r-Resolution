<h1> <%=current_user_name %>'s Profile Page </h1>

<h2> Questions </h2>
<ul>
  <% @questions.each do |question| %>
    <% if question.user_id== current_user %>
      <li><a href="/questions/<%=question.id%>"><%= question.title %></a> <a href="/questions/<%=question.id%>/edit">Edit</a> <%=question.created_at%></li>
    <% end %>
  <% end %>
</ul>

<h2> Answers </h2>
<ul>
  <% @answers.each do |answer| %>
    <% if answer.user_id== current_user %>
      <li><a href="/questions/<%=answer.question_id%>"><%= answer.text %></a> <%=answer.created_at%></li>
    <% end %>
  <% end %>
</ul>

<h2> Comments </h2>
<ul>
<% @comments.each do |comment| %>
  <% if comment.user_id== current_user %>
    <li><a href="/questions/<%=comment.commentable_id%>"><%= comment.text %></a> <%=comment.created_at%></li>
  <% end %>
<% end %>
</ul>
