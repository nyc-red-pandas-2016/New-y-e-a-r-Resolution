<div class="main_question_div">

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li class="error"><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="question_header">
    <h1> <%= @question.title %> </h1>
    <p> <%= @question.user.username%></p>
  </div>


    <div class="q_a_container" id="<%= @question.id%>">
      <p> <%= @question.body %> </p>
    </div>

    <div class="vote_container">
      <% if @question.user_id != current_user %>
      <a id="question_upvote" href="/questions/<%=@question.id%>/upvote"><img src="/images/upvote.png"></img></a>
      <% end %>
      <p><span id="current_votes"><%=@question.count_votes %></span></p>
      <% if @question.user_id != current_user %>
      <a id="question_downvote" href="/questions/<%=@question.id%>/downvote"><img src="/images/downvote.png"></img></a>
      <% end %>
      <% if @question.user_id == current_user %>
        <p><a href="/questions/<%=@question.id%>/edit">Edit Or Delete</a></p>
      <% end %>
    </div>


  <div class="comment_container">
    <form class="comment_form" method="POST" action="/questions/<%= @question.id %>/comments/new">
      <input class="submit_button" type="submit" value="Add Comment">
      <input class="comment_field" type="text" name="text"> </input>
    </form>
    <ul class="comment_list">
      <% @question.comments.each do |comment| %>
        <li><%= comment.text %> - <%= comment.user.username%></li>      <% end %>
    </ul>
  </div>

  <div class="answer_score">
    <% if @answers.length == 1 %>
      <p> 1 Answer </p>
    <% else %>
     <p> <%= @answers.length %> Answers </p>
    <% end %>
  </div>

    <div class="q_a_container">
      <% @answers.each do |answer| %>
        <% if answer.best %>
          <p id="is_best"> THIS IS THE BEST!!!! </p>
        <% end %>
          <p class="answer_paragraph" id="<%=answer.id%>"> <%= answer.text %> - <%= answer.user.username%> </p>
          <% if @best_enabled %>
            <a id="choose_best"href="/answers/<%=answer.id%>/best">Choose as Best Answer</a>
          <% end %>
    </div>

    <div class ="vote_container">
        <a id="answer_upvote" href="/answers/<%=answer.id%>/upvote"><img src="/images/upvote.png"></img></a>
        <p><%=answer.count_votes %></p>
        <a id="answer_downvote"href="/answers/<%=answer.id%>/downvote"><img src="/images/downvote.png"></img></a>
    </div>

    <div class="comment_container">
      <% answer.comments.each do |comment| %>
        <ul class="comment_list">
          <li><%= comment.text %> - <%= comment.user.username%></li>
        </ul>
        <% end %>
        <form class="comment_form" method="POST" action="/answers/<%= answer.id %>/comments/new">
          <input class="submit_button" type="submit" value="Add Comment">
          <input class="comment_field" type="text" name="text"> </input>
        </form>
      <% end %>

    </div>


  <div class="answer_form">
    <h2> Add Answer </h2>
    <form method="POST" action="/questions/<%= @question.id %>/answers/new">
      <textarea name="text"> </textarea><br>
      <input type="submit" value="Submit Answer">
    </form>
  </div>

</div>
