<div class="container">
  <h1>Edit Question</h1>
  <form action="/questions/<%=@question.id%>/edit" method="post" class="register_form">
    <label for="question[title]">Title:</label>
    <input type="text" name="question[title]" value="<%=@question.title%>"><br>
    <label for="question[body]">Body:</label>
    <input type="text" name="question[body]" value="<%=@question.body %>"><br>
    <label for="tags">Add Tags:</label>
    <input type="text" name="tags" value="<%=@tag_names%>"><br>
    <input type="hidden" name="question[user_id]" value="<%= current_user %>">

    <input type="submit" value="Submit Question" class="submit_button">
  </form>
</div>
