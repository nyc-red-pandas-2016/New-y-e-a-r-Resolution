<div class="container">

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <h1>Edit Comment</h1>
  <form action="/comments/<%=@comment.id%>/edit" method="post" class="register_form">
    <input type="hidden" name="_method" value="put">
    <label for="comment[text]">Text:</label>
    <input type="text" name="comment[text]" value="<%=@comment.text%>"><br>
    <input type="hidden" name="comment[user_id]" value="<%= current_user %>">
    <input type="submit" value="Edit Comment" class="submit_button">
  </form>

  <h1>Delete Comment</h2>
    <form action="<%= "/comments/#{@comment.id}" %>" method="post">
    <input type="submit" value="Delete Comment">
    <input type="hidden" name="question_id" value="<%= @question_id %>">
    <input type="hidden" name="_method" value="delete">
  </form>

</div>
